{
  "name": "sumobo",
  "version": "0.1.2",
  "description": "a framework for simple simulations",
  "main": "index.js",
  "scripts": {
    "build": "node_modules/.bin/webpack",
    "babel": "babel --presets es2015 js/index.js -o build/index.bundle.js",
    "start": "node_modules/.bin/webpack-dev-server -d --hot --inline --port 9000",
    "test": "mocha --compilers js:babel-core/register $(find test -name '*.js')"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klenwell/sumobo.git"
  },
  "keywords": [
    "open",
    "source",
    "rook",
    "sports",
    "game"
  ],
  "author": "Tom Atwell",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/klenwell/sumobo/issues"
  },
  "homepage": "https://github.com/klenwell/sumobo#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "expect.js": "^0.3.1",
    "mocha": "^3.2.0",
    "mocha-sinon": "^1.1.6",
    "sinon": "^1.17.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.7.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
